<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
   <link rel="stylesheet" href="/css/style.css" media="screen" title="no title" charset="utf-8">
  <meta charset="UTF-8">
  <title>Books by <%= author.name %></title>
</head>
<body>
  <div class="container-fluid">
    <h1>Books by <%= author.name %></h1>
    <table class="table">
    <thead>
      <tr>
       <th>Book ID</th>
        <th>Book Name</th>
        <th>Author ID</th>
      </tr>
    </thead>
    <tbody>
      <tr>
      <% books.forEach(function(book) { %>
        
          <td><%= book.id %></td>
          <td><%= book.book_name %></td>
          <td><%= author.id %></td>

          <td>
            <form action="/authors/books/<%= author.id %>/<%= book.id %>/edit?_method=GET" method="GET">
              <input type="submit" value="Edit">
            </form>
          
            <form action="/authors/books/<%= author.id %>/<%= book.id %>?_method=DELETE" method="POST">
              <input type="submit" value="Delete">
            </form>
          </td>
        </tr>
      <% }); %>
      </tbody>
    </table>

    <form action="/authors" method="GET">
      <input type="submit" value="Back to authors">
    </form>
  </div>
</body>
</html>